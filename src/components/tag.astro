---
import { tagToCssClass, type TagName } from 'data/tag_names';

type Props = {
	text: TagName;
};

const { text } = Astro.props;
---

<small class:list={{ [tagToCssClass(text)]: true }} class="tag">
	{text}
</small>

<style>
	.tag {
		@apply text-white rounded-full px-2 select-none cursor-default;
	}
</style>
